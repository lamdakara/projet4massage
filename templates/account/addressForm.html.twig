{% extends 'base.html.twig' %}

{% block title %}Gérer mes adresses - Lili Giroud{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{asset('assets/css/address.css')}}">{% endblock %}

{% block account %}{% endblock %}

{% block body %}
	<main id="addressMain">

		<!-- Titre H1 -->
		<h1 class="title">Gérer mes adresses</h1>

		{{ form_start(form) }}
		<!-- Container input label -->
		<div id="containerAddressForm">
			<!-- Nom de l'adresse -->
			<div class="inputAddress" id="nameForm">
				{{ form_row(form.name) }}
			</div>

			<!-- Civilité -->
			<div class="inputCivility" id="civilityForm">
				{{ form_row(form.civility) }}
			</div>

			<!-- Nom  -->
			<div class="inputAddress" id="lastnameForm">
				{{ form_row(form.lastname) }}
			</div>

			<!-- Prénom -->
			<div class="inputAddress" id="firstnameForm">
				{{ form_row(form.firstname) }}
			</div>

			<!-- Adresse -->
			<div class="inputAddress" id="addressForm">
				{{ form_row(form.address) }}
			</div>

			<!-- Code postal -->
			<div class="inputAddress" id="postalForm">
				{{ form_row(form.postal) }}
			</div>

			<!-- Ville -->
			<div class="inputAddress" id="cityForm">
				{{ form_row(form.city) }}
			</div>

			<!-- Téléphone -->
			<div class="inputAddress" id="phoneForm">
				{{ form_row(form.phone) }}
			</div>

		</div>

		<!-- Bouton d'envoi -->
		<div id="submitButton">
			{{ form_row(form.submit) }}
		</div>

		{{ form_end(form) }}

		<!-- IMAGE ILLUSTRATION -->
		<img src="{{asset('assets/img/illustration/separatorDecouv.svg')}}" alt"" id="separatorForm">

	</main>

{% endblock %}
